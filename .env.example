# Database Configuration
DATABASE_URL=postgresql://crypto_user:crypto_password@postgres:5432/crypto_db
POSTGRES_USER=crypto_user
POSTGRES_PASSWORD=crypto_password
POSTGRES_DB=crypto_db

# API Keys
# CoinPaprika free tier does not require API key
COINPAPRIKA_API_KEY=
# CoinGecko free tier does not require API key  
COINGECKO_API_KEY=

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# ETL Configuration
ETL_SCHEDULE_MINUTES=30
ENABLE_ETL_ON_STARTUP=true

# Rate Limiting (requests per minute)
COINPAPRIKA_RATE_LIMIT=10
COINGECKO_RATE_LIMIT=50
CSV_BATCH_SIZE=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_SCHEMA_DRIFT_DETECTION=true
ENABLE_FAILURE_INJECTION=false
